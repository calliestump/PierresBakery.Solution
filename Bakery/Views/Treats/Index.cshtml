@{
  Layout = "_Layout";
}

@using Bakery.Models;
@model List<Bakery.Models.Treat>;
<div class="container card">
<h2>Pierre's Treats</h2>
<hr />
@if (Model.Count == 0)
{
  <h4><span>No treats have been added to Pierres :(</span></h4>
}

@foreach (Treat treat in Model)
{
  <h4>@Html.ActionLink($"{treat.TreatName}", "Details", new { id = treat.TreatId })</h4>
}
<br />
<p>@Html.ActionLink("Add new treat", "Create")</p>
</div>