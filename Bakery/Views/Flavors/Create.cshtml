@{
  Layout = "_Layout";
}

@model Bakery.Models.Flavor
<div class="container card">
<h4>Add Flavor to Pierre's</h4>
<hr />
@using (Html.BeginForm())
{
  @Html.Label("Flavor Name")
  <br />
  @Html.TextBoxFor(model => model.FlavorName)
  <br /><br />
  <input type="submit" class="btn btn-default" type="button" value="Add new flavor!" />
}
<br />
<p>@Html.ActionLink("Show all flavors", "Index")</p>
</div>